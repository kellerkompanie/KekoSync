<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kellerkompanie.kekosync.client.gui.RootController">
    <TabPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab fx:id="modsTab" text="Mods">
            <fx:include source="mods.fxml" />
        </Tab>
        <Tab text="Search Directories">
            <fx:include source="searchDirectories.fxml" />
        </Tab>
        <Tab fx:id="launcherOptionsTab" text="Launcher Options">
            <fx:include source="launcherOptions.fxml" />
        </Tab>
        <Tab fx:id="settingsTab" text="Settings">
            <fx:include source="settingsTab.fxml" />
        </Tab>
    </TabPane>

    <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
        </padding>
        <Label text="Server:" />
        <ComboBox fx:id="serverComboBox" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="none" />
                    <String fx:value="server.kellerkompanie.com" />
                </FXCollections>
            </items>
            <value>
                <String fx:value="none" />
            </value>
        </ComboBox>
        <Button onAction="#handleStartGameAction" text="Start Game" />
    </HBox>

</VBox>
