<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kellerkompanie.kekosync.client.gui.SearchDirectoriesController" maxWidth="Infinity" minWidth="-Infinity" minHeight="-Infinity">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <ListView fx:id="listView" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" minHeight="-Infinity" minWidth="-Infinity"/>

    <VBox spacing="10">
        <padding><Insets left="10"/></padding>
        <Button onAction="#handleAddAction" text="Add" maxWidth="Infinity" />
        <Button onAction="#handleRemoveAction" text="Remove" maxWidth="Infinity" />
    </VBox>
</HBox>
